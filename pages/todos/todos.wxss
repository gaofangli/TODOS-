.container {
  border-top: 1rpx solid #e0e0e0;
}

.search {
  border: 1rpx solid #e0e0e0;
  border-radius: 5rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  display: flex;
  margin: 20rpx;
  padding: 20rpx;
  width: 100%;
  align-items: center;
}

.search image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.todos {
  margin: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 5rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  width: 100%;
}
.todos .item{
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center; 
}
.todos .item:last-child{
  border-bottom: 0
}
.todos .item text{
  flex: 1;
  font-size: 30px;
  color:#444;
  margin-left: 20rpx;
}
.todos .item.completed text{
  color:#888;
  text-decoration: line-through;
}
.footer{
  display: flex;
  justify-content: space-between;
  margin: 20rpx;
  font-size: 30px;
}